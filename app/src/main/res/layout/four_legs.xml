<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/two_legs_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="Hello! Feel free to edit your dog(s) details below"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/save_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="SAVE"
        android:textColor="@color/toolbar_red" />

    <EditText
        android:id="@+id/dog_1_describe_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dog_1_color_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/backtext"
        android:editable="true"
        android:ems="10"
        android:gravity="top"
        android:hint="General description of your dog!"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:nestedScrollingEnabled="true"
        android:paddingEnd="5dp" />

    <TextView
        android:id="@+id/breed_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dog_1_breed_edit"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Breed:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/dog_1_breed_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dog_1_name_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/dog_1_color_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dog_1_breed_edit"
        android:layout_alignStart="@+id/dog_1_breed_edit"
        android:layout_below="@+id/dog_1_breed_edit"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/describe_1"
        android:layout_alignStart="@+id/describe_1"
        android:layout_alignTop="@+id/dog_1_color_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Color:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/welc_dog_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_welcome"
        android:layout_alignStart="@+id/profile_welcome"
        android:layout_below="@+id/profile_welcome"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dog_1_name_edit"
        android:layout_alignLeft="@+id/describe_1"
        android:layout_alignStart="@+id/describe_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/dog_1_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dog_1_breed_edit"
        android:layout_alignStart="@+id/dog_1_breed_edit"
        android:layout_below="@+id/welc_dog_name_1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dog_1_describe_edit"
        android:layout_alignLeft="@+id/descript_text"
        android:layout_alignStart="@+id/dog_1_describe_edit"
        android:layout_marginBottom="-30dp"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>