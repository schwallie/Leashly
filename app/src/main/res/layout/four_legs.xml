                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView193"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dog_3_name_edit"
                    android:layout_alignLeft="@+id/describe_3"
                    android:layout_alignStart="@+id/describe_3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Name:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/dog_3_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dog_3_breed_edit"
                    android:layout_alignStart="@+id/dog_3_breed_edit"
                    android:layout_below="@+id/welc_dog_name_3"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView183"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/dog_3_describe_edit"
                    android:layout_alignLeft="@+id/descript3_text"
                    android:layout_alignStart="@+id/dog_3_describe_edit"
                    android:layout_marginBottom="-30dp"
                    android:text="Description:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_btn_four"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="SAVE"
        android:textColor="@color/toolbar_red" />
</RelativeLayout>