                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:maxLines="4"
                    android:nestedScrollingEnabled="true"
                    android:paddingEnd="5dp" />

                <TextView
                    android:id="@+id/breed2_textview"
                    android:layout_width="wrap_content"
